<Window x:Class="WpfAppList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppList"
        mc:Ignorable="d"
        Title="MainWindow" Height="284" Width="308">
    <Grid Margin="10,0,10,7">
        <Label Content="Names" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="17" Margin="170,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="102"/>
        <Button Content="Add Name" HorizontalAlignment="Left" Margin="191,81,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="112" Margin="10,51,0,0" VerticalAlignment="Top" Width="147" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
